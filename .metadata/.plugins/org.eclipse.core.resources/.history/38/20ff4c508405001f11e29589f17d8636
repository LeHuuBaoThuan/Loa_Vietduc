#ifndef _INCLUDE_L7D_595_H_
#define _INCLUDE_L7D_595_H_

#include "stm32f1xx_hal.h"

#if _7SEG_ANODE
int L7_Anode[10] = { 0x3F, 0x06, 0x5B, 0x4F, 0x66, 0x6D, 0x7D, 0x07, 0x7F,  0x6F };// ma hien thi led 7 doan AM CHUNG
#elif _7SEG_KATHODE
int L7_Kathode[10] = { 0xC0, 0xF9, 0xA4, 0xB0, 0x99,0x92, 0x82, 0xF8, 0x80,  0x90 };//MA LED 7 DOAN DUONG CHUNG
#endif

void L7D_74HC595_Init(	GPIO_TypeDef * DS_Port, GPIO_TypeDef * Shift_Port, GPIO_TypeDef * ST_Port, 			\
						uint16_t DS_Pin, uint16_t SH_Pin, uint16_t ST_Pin);									\

void L7D_74HC595_Set_Reset(uint16_t  tt);

#endif /* _INCLUDE_L7D_595_H_ */
